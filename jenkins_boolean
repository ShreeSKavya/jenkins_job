boolean stageResult = true

pipeline {
    agent any

    stages {
        stage('STAGE 1') {
            steps {
                script {
                    try {
                        echo 'This is STAGE 1 execution'
                        sh 'sleep 5'
                    } catch(Exception e) {
                        echo 'STAGE 1 FAILED'
                        stageResult = false
                    }
                }
            }
        }
    }
}
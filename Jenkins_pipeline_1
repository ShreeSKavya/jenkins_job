pipeline {
    agent any
    
    stages {
        stage('BUILD') {
            steps {
                sh 'sleep 5'
            }
        }
        
        stage('TEST') {
            steps {
                sh 'sleep 5'
                exit 1
            }
        }
        
        stage('DEPLOY') {
            steps {
                sh 'sleep 5'
            }
        }
    }
}
